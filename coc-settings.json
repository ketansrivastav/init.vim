{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "css",
    "scss",
    "json"
  ],
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠'",
  "diagnostic.infoSign": "i",
  "diagnostic.hintSign": "ﯦ'",
  "languageserver": {
    "clojure-lsp": {
      "command": "bash",
      "args": [
        "c",
        "clojure-lsp"
      ],
      "filetypes": [
        "clojure"
      ],
      "rootPatterns": [
        "project.clj",
        "deps.edn"
      ],
      "additionalSchemes": [
        "jar",
        "zipfile"
      ],
      "trace.server": "verbose",
      "initializationOptions": {
        "ignore-classpath-directories": true
      }
    }
  }
}
